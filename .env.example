# Django - core
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
# Set USE_SQLITE=True to use SQLite instead of PostgreSQL
USE_SQLITE=False
DB_NAME=dbname
DB_USER=dbuser
DB_PASSWORD=dbpassword
DB_HOST=localhost
DB_PORT=5432

# OAuth Settings
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5173/accounts/google/login/callback/

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Email Configuration
DEFAULT_FROM_EMAIL=noreply@example.com

# Email Provider Settings
# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_HOST=smtp.sendgrid.net
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=${SENDGRID_API_KEY}
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Uncomment below for Gmail SMTP configuration
# EMAIL_HOST=smtp.gmail.com
# EMAIL_HOST_USER=your.email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_PORT=587
# EMAIL_USE_TLS=True

# Account Settings
ACCOUNT_EMAIL_VERIFICATION=optional
ACCOUNT_USERNAME_REQUIRED=False
ACCOUNT_EMAIL_REQUIRED=True
ACCOUNT_SIGNUP_PASSWORD_ENTER_TWICE=False
ACCOUNT_LOGOUT_ON_PASSWORD_CHANGE=False
ACCOUNT_LOGIN_BY_CODE_ENABLED=False
ACCOUNT_EMAIL_VERIFICATION_BY_CODE_ENABLED=False

# Frontend URL
FRONTEND_URL=http://localhost:3000
EMAIL_VERIFICATION_PATH=verify-email